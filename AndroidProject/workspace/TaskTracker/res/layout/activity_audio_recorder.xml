<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   
    <Button
        android:id="@+id/button_audio_record"
        android:layout_weight="33"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:onClick="recordAudio"
        android:text="@string/button_audio_record" />

    <Button
        android:id="@+id/button_audio_use"
        android:layout_width="match_parent"
        android:layout_height="0dip"
                android:layout_weight="33"
        
        android:onClick="useAudio"
        android:text="@string/button_audio_use" />
    <Button
        android:id="@+id/button_audio_done"
        android:layout_width="match_parent"
        android:layout_height="0dip"
                android:layout_weight="34"
        
        android:onClick="doneAudio"
        android:text="@string/button_audio_done" />

</LinearLayout>
