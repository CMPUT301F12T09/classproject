<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <Button
        android:id="@+id/button_audio_cancel"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_audio_cancel"
        android:onClick="cancelAudio" />
    
    <Button
        android:id="@+id/button_audio_record"
        android:layout_above="@id/button_audio_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_audio_record"
        android:onClick="recordAudio" />

</RelativeLayout>
